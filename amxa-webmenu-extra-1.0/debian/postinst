#!/bin/sh
# postinst script for amxa-webmenu-extra
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
      #these should go to opinsysextra!!
      if test -e /etc/webmenu/config.yaml; then
        mv /etc/webmenu/config.yaml /etc/webmenu/config.yaml.opinsys
      fi
      if test -e /etc/webmenu/config.json; then
        mv /etc/webmenu/config.json /etc/webmenu/config.json.opinsys
      fi
      cp /etc/webmenu/amxa-config.json /etc/webmenu/config.json

      # install amxa menus
      if test -e /etc/webmenu/menu.yaml; then
        mv /etc/webmenu/menu.yaml /etc/webmenu/menu.yaml.opinsys
      fi
      if test -e /etc/webmenu/menu.json; then
        mv /etc/webmenu/menu.json /etc/webmenu/menu.json.opinsys
      fi
      cp /etc/webmenu/amxa-menu.json /etc/webmenu/menu.json

      #persoanllyadministered devices
      if ! test -d /etc/webmenu/personally-administered-device/; then
        mkdir -p /etc/webmenu/personally-administered-device/
      fi
      if  test -e /etc/webmenu/personally-administered-device/config.yaml; then
        mv /etc/webmenu/personally-administered-device/config.yaml /etc/webmenu/personally-administered-device/config.yaml.opinsys
      fi
      cp /etc/webmenu/amxa-config.json /etc/webmenu/personally-administered-device/config.json
      if test -e /etc/webmenu/personally-administered-device/menu.yaml; then
        mv /etc/webmenu/personally-administered-device/menu.yaml /etc/webmenu/personally-administered-device/menu.yaml.opinsys 
      fi
      cp /etc/webmenu/amxa-menu.json /etc/webmenu/personally-administered-device/menu.json
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
